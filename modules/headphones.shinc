# avoid double inclusion
if test "${headphones__imported+defined}" == "defined"; then
  return 0
fi
headphones__imported=1

function headphones__get_status() {
  if service headphones status > /dev/null 2>&1; then
    result="Enabled and Running"
  elif ls /etc/rc?.d/*headphones > /dev/null 2>&1; then
    result="Not Running"
  else
    result="Disabled"
  fi
  echo "$result"
}

function headphones__enable() {
  if [ "$(headphones__get_status)" == "Disabled" ]; then
    update-rc.d headphones defaults > /dev/null 2>&1
    if [ "$(tools__path_istype $headphonesData/.disabled)" == "File" ]; then
      rm -f $headphonesData/.disabled > /dev/null 2>&1
    fi
    timestamp=$(date "+%Y%m%d%H%M%S")
    sudo su -c -u $osUser "echo $timestamp > $headphonesData/.enabled"
  fi
  headphones__start
}

function headphones__disable() {
  if [ "$(headphones__get_status)" != "Disabled" ]; then
    headphones__stop
    update-rc.d -f headphones remove > /dev/null 2>&1
    if [ "$(tools__path_istype $headphonesData/.enabled)" == "File" ]; then
      rm -f $headphonesData/.enabled > /dev/null 2>&1
    fi
    timestamp=$(date "+%Y%m%d%H%M%S")
    sudo su -c -u $osUser "echo $timestamp > $headphonesData/.disabled"
  fi
}

function headphones__upgrade() {
  if cd $headphonesSource && ! git fetch -v --dry-run 2>&1 | grep -iv "^from" | grep -ivq "\[up to date\]"; then
    echo "Headphones is already up-to-date..."
  else
    echo "Upgrading Headphones..."
    headphones__stop
    sudo su -c -u $osUser "cd $headphonesSource && git remote update > /dev/null 2>&1"
    sudo su -c -u $osUser "cd $headphonesSource && git pull --all > /dev/null 2>&1"
    headphones__start
  fi
}

function headphones__start() {
  if [ "$(headphones__get_status)" != "Disabled" ]; then
    for i in {1..3}; do
      if [ $i -gt 1 ]; then
        sleep 2
      fi
      if [ "$(headphones__get_status)" != "Enabled and Running" ]; then
        service headphones start > /dev/null 2>&1
      else
        break
      fi
    done
  fi
}

function headphones__stop() {
  for i in {1..3}; do
    if [ $i -gt 1 ]; then
      sleep 2
    fi
    if [ "$(headphones__get_status)" == "Enabled and Running" ]; then
      service headphones stop > /dev/null 2>&1
    else
      break
    fi
  done
}

function headphones__set_username() {
  username="$1"

  sed -i -e '/^\[General\]/,/^\[/{/^\[General\]/n;/^\[/!{s/^http_username .*/http_username = '$username'/g}}' $headphonesConfig
}

