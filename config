restoreDone="/opt/tretflix/.sys/.restored"

# Path to application data directories (config files and other runtime data)
couchpotato_appdata="/opt/tretflix/appdata/couchpotato"
headphones_appdata="/opt/tretflix/appdata/headphones"
plexmediaserver_appdata="/opt/tretflix/appdata/plexmediaserver"
