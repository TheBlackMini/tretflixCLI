# Path to application config files
couchpotato_config="$couchpotato_appdata/settings.conf"
headphones_config="$headphones_appdata/config.ini"
maraschino_config="$maraschino_appdata/maraschino.db"
plexmediaserver_config="$plexmediaserver_appdata/Plex\ Media\ Server/Preferences.xml"
