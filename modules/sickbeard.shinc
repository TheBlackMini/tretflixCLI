# avoid double inclusion
if test "${sickbeard__imported+defined}" == "defined"; then
  return 0
fi
sickbeard__imported=1

function sickbeard__get_status() {
  if service sickbeard status > /dev/null 2>&1; then
    result="Enabled and Running"
  elif ls /etc/rc?.d/*sickbeard > /dev/null 2>&1; then
    result="Not Running"
  else
    result="Disabled"
  fi
  echo "$result"
}

function sickbeard__enable() {
  if [ "$(sickbeard__get_status)" == "Disabled" ]; then
    update-rc.d sickbeard defaults > /dev/null 2>&1
    if [ "$(tools__path_istype $sickbeardData/.disabled)" == "File" ]; then
      rm -f $sickbeardData/.disabled > /dev/null 2>&1
    fi
    timestamp=$(date "+%Y%m%d%H%M%S")
    sudo su -c -u $osUser "echo $timestamp > $sickbeardData/.enabled"
  fi
  sickbeard__start
}

function sickbeard__disable() {
  if [ "$(sickbeard__get_status)" != "Disabled" ]; then
    sickbeard__stop
    update-rc.d -f sickbeard remove > /dev/null 2>&1
    if [ "$(tools__path_istype $sickbeardData/.enabled)" == "File" ]; then
      rm -f $sickbeardData/.enabled > /dev/null 2>&1
    fi
    timestamp=$(date "+%Y%m%d%H%M%S")
    sudo su -c -u $osUser "echo $timestamp > $sickbeardData/.disabled"
  fi
}

function sickbeard__upgrade() {
  if cd $sickbeardSource && ! git fetch -v --dry-run 2>&1 | grep -iv "^from" | grep -ivq "\[up to date\]"; then
    echo "Sick Beard is already up-to-date..."
  else
    echo "Upgrading Sick Beard..."
    sickbeard__stop
    sudo su -c -u $osUser "cd $sickbeardSource && git remote update > /dev/null 2>&1"
    sudo su -c -u $osUser "cd $sickbeardSource && git pull --all > /dev/null 2>&1"
    sickbeard__start
  fi
}

function sickbeard__start() {
  if [ "$(sickbeard__get_status)" != "Disabled" ]; then
    for i in {1..3}; do
      if [ $i -gt 1 ]; then
        sleep 2
      fi
      if [ "$(sickbeard__get_status)" != "Enabled and Running" ]; then
        service sickbeard start > /dev/null 2>&1
      else
        break
      fi
    done
  fi
}

function sickbeard__stop() {
  for i in {1..3}; do
    if [ $i -gt 1 ]; then
      sleep 2
    fi
    if [ "$(sickbeard__get_status)" == "Enabled and Running" ]; then
      service sickbeard stop > /dev/null 2>&1
    else
      break
    fi
  done
}

function sickbeard__set_username() {
  username="$1"

  sed -i -e '/^\[General\]/,/^\[/{/^\[General\]/n;/^\[/!{s/^web_username .*/web_username = '$username'/g}}' $sickbeardConfig
  sed -i -e '/^\[SickBeard\]/,/^\[/{/^\[SickBeard\]/n;/^\[/!{s/^username.*/username='$username'/g}}' $sickbeardScriptConfig
}

function sickbeard__set_password() {
